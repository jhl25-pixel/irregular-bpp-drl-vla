<?xml version="1.0" encoding="utf-8"?>
<mujoco model="conveyor">
  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
  
  <option timestep="0.002" integrator="RK4"/>
  
  <default>
    <joint damping="0.1"/>
    <geom friction="1 0.5 0.005"/>
  </default>
  
  <asset>
    <material name="conveyor_mat" rgba="0.2 0.2 0.2 1"/>
  </asset>
  
  <worldbody>
    <light pos="0 0 3" dir="0 0 -1"/>
    
    
    <body name="conveyor_belt" pos="-0.8 -0.4 0.005">
      <joint name="belt_slide" type="slide" axis="1 0 0" range="-2 2" damping="0.1"/>
      <geom name="belt_surface" type="box" size="1.6 0.2 0.002" material="conveyor_mat" friction="1.5 0.5 0.005"/>
    </body>
  </worldbody>
  
  <actuator>
    <motor joint="belt_slide" gear="1"/>
  </actuator>


</mujoco>