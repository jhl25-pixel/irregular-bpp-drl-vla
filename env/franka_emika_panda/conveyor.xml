<mujoco model="conveyor_with_warehouse">
    <compiler angle="radian" coordinate="local" inertiafromgeom="true" eulerseq="xyz" />
    <option timestep="0.0005" integrator="RK4" gravity="0 0 -9.81" iterations="100" tolerance="1e-10" />
    
    <asset>
        <material name="conveyor_mat" rgba="0.2 0.2 0.2 1" />
        <material name="ground_mat" rgba="0.9 0.9 0.9 1" />
        <material name="box_mat" rgba="0.8 0.4 0.2 1" />
        <material name="support_mat" rgba="0.3 0.3 0.3 1" />
        <material name="warehouse_mat" rgba="0.6 0.5 0.8 1" />
        <material name="warehouse_opening" rgba="0.2 0.2 0.2 1" />
        <texture name="moving_belt" type="2d" builtin="checker" rgb1="0.4 0.4 0.4" width="100" height="100" />
        <material name="belt_material" texture="moving_belt" texrepeat="50 2" rgba="0.2 0.2 0.2 1" />
    </asset>

    <worldbody>

        
        
        <!-- Cameras: front, side, top-down, egocentric (robot-eye), wrist -->
        <!-- front view: positioned in front of the robot looking toward negative x (adjust as needed) -->
        <camera name="front_cam" pos="2.5 0 0.8" xyaxes="0 1 0 0 0 1" />
        <!-- side view: positioned to the right side, looking toward robot center -->
        <camera name="side_cam" pos="0 -2.5 0.8" xyaxes="1 0 0 0 0 1" />
        <!-- top-down view: high above looking straight down -->
        <camera name="topdown_cam" pos="0 0 4.0" xyaxes="1 0 0 0 1 0" />


        
        <geom name="warehouse_floor" type="box" size="3.8 0.6 0.15" pos="-5.3 -0.5 0.05" material="warehouse_mat" condim="6" friction="0 0.1 0.01" />
        
        
        <geom name="warehouse_back" type="box" size="0.05 0.6 0.4" pos="-9.1 -0.5 0.4" material="warehouse_mat" condim="6" friction="1.0 0.1 0.01" />
        
        
        <geom name="warehouse_left" type="box" size="3.8 0.05 0.4" pos="-5.3 -1.1 0.4" material="warehouse_mat" condim="6" friction="1.0 0.1 0.01" />
        
        
        <geom name="warehouse_right" type="box" size="3.8 0.05 0.4" pos="-5.3 0.09999999999999998 0.4" material="warehouse_mat" condim="6" friction="1.0 0.1 0.01" />
        
        
        <geom name="warehouse_roof" type="box" size="3.8 0.6 0.05" pos="-5.3 -0.5 0.75" material="warehouse_mat" condim="6" friction="1.0 0.1 0.01" />
        

        
        <geom name="left_support" type="box" size="0.1 0.3 0.08" pos="-1 -0.5 0.1" material="support_mat" condim="6" friction="0 0.1 0.01" />
        <geom name="right_support" type="box" size="0.1 0.3 0.08" pos="1 -0.5 0.1" material="support_mat" condim="6" friction="0 0.1 0.01" />
        <geom name="frame_base" type="box" size="1.1 0.3 0.05" pos="0 -0.5 0.04" material="support_mat" condim="6" friction="0 0.1 0.01" />
        
        
        <geom name="belt_surface" type="box" size="1 0.25 0.08" pos="0 -0.5 0.12" material="belt_material" condim="6" friction="0 0.1 0.01" />
        
        
        <geom name="left_rail" type="box" size="1 0.02 0.05" pos="0 -0.77 0.13" material="support_mat" condim="6" friction="0 0.1 0.01" />
        <geom name="right_rail" type="box" size="1 0.02 0.05" pos="0 -0.73 0.13" material="support_mat" condim="6" friction="0 0.1 0.01" />
        
        
        <geom name="connection_bridge" type="box" size="0.25 0.25 0.02" pos="-1.25 -0.5 0.18" material="belt_material" condim="6" friction="0 0.1 0.01" />
        
        
        
        
        <light name="top_light" pos="0 0 4" dir="0 0 -1" diffuse="0.8 0.8 0.8" />
        <light name="side_light1" pos="3 3 3" dir="-1 -1 -1" diffuse="0.4 0.4 0.4" />
        <light name="side_light2" pos="-3 3 3" dir="1 -1 -1" diffuse="0.4 0.4 0.4" />
        <light name="warehouse_light" pos="-5.8 -0.5 1" dir="0 0 -1" diffuse="0.6 0.6 0.6" />
    </worldbody>
</mujoco>